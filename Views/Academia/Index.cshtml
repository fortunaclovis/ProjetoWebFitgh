@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HorarioFunciona)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aula_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contato_Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_Academia">Edit</a> |
